@model ShinyRockForum.Models.Discussion

@{
    ViewData["Title"] = "Edit";
}


<h4>Edit discussion</h4>
<hr />

<div>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="DiscussionId" />
        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Content" class="control-label"></label>
            <textarea asp-for="Content" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <p>Change image:</p>
        <div class="form-group mb-3">
            <label asp-for="ImageFile" class="form-label"></label>
            <input type="file" asp-for="ImageFile" class="form-control" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>
        <div class="form-group justify-content-end d-flex gap-2 mb-2 mx-2">
            <input type="submit" value="Save" class="btn btn-primary"/> |
            <a class="btn btn-primary" asp-controller="Home" asp-action="GetDiscussion" asp-route-id="@Model.DiscussionId">Back</a>
        </div>
    </form>
</div>


<div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
